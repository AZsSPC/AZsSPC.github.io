{
  "color": [
    {"p": "\".+?\"|'.+?'", "r": "string"},
    {"p": ";.*$", "r": "comment"},
    {"p": "\\.model\\s+(tiny|small|medium|compact|large|huge|tchuge|tpascal|flat)|,", "r": "orange", "f": "gim"},
    {"p": "\\b[a-f0-9]+h\\b", "r": "magenta", "f": "gim"},
    {"p": "\\be?[abcd][xhls]\\b", "r": "blue", "f": "gim"},
    {"p": "\\b[a-z0-9_]+\\s+(proc|endp)", "r": "void", "f": "gim"},
    {"p": "\\bmain\\b", "r": "main"},
    {"p": "\\.(stack|data|code)", "r": "orange"},
    {"p": "\\b[0-9]\\b", "r": "blue"},
    {"p": "\\b[a-z0-9_]+\\s+d[bwdqt]\\b", "r": "yellow", "f": "gim"},
    {"p": "\\b(mov|int)\\b", "r": "func", "f": "gim"}
  ],
  "reform": [
    {"p": "(?<=endp)\\s*", "r": "\n\n"},
    {"p": "^\\s*(?=\\b(mov|int|([a-zA-Z0-9]+\\s+(d[bwdqt]|D[BWDQT])))\\b)", "r": "\t"},
    {"p": "(?<=\\b(mov|int)\\b)\\s*", "r": "\t\t"}
  ]
}
